<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exam_background"

    tools:context=".RekabetciActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your pencil:"
        android:id="@+id/hak"
        android:layout_toLeftOf="@id/kalem"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/kalem"
        android:layout_alignParentRight="true"
        android:src="@drawable/pen"
        android:layout_marginTop="4dp"/>

    <Button
        android:layout_width="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/increase"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:text="+"
        android:layout_toLeftOf="@id/hak"
        android:background="#FFFFFF"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank"
        android:textColor="#ffe413"
        android:text="Name"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/name"
        android:textColor="#ffe413"
        android:textSize="30sp"
        android:layout_toRightOf="@id/rank"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/skor_tablosu"
        android:background="@drawable/leaderbord"
        android:padding="20dp"
        android:layout_below="@id/rank"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@id/skor_tablosu"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="#ffd700"
        android:textColor="#0000ff"
        android:id="@+id/teste_basla"
        android:text="start testing"/>


</RelativeLayout>