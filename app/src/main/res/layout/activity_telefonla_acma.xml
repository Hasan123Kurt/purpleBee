<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelefonlaAcmaActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textdeneme"
        android:textSize="20sp"
        android:padding="19dp"
        android:text="Enter your phone number with country code"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:id="@+id/telefon_numarasi_girdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Example:+9005xxxxxxxxx"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/dogrulama_kodunu_yazın"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dogrulama_kodu_gonder_buttonu"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Enter phone verification code"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_code_black_24dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/dogrulama_kodu_gonder_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND CODE"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/telefon_numarasi_girdi"
        android:background="@drawable/butonlar"/>
    <Button
        android:id="@+id/dogrulama_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Code"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/dogrulama_kodunu_yazın"
        android:visibility="invisible"
        android:background="@drawable/butonlar"/>


</RelativeLayout>