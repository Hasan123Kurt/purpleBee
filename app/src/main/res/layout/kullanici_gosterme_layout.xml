<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kullanicilar_profil_resmi"
            android:src="@drawable/yeni_person"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kullanici_profil_adi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Request Sent"
                    android:textSize="26dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAlignment="textStart"/>
                <ImageView
                    android:id="@+id/kullanici_cemrimici_olma_durumu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_brightness_green_24dp"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kullanici_durumu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pending"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"

                    android:textAlignment="textStart"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/talep_kabul_buttonu"
                android:text="Kabul"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/talep_iptal_buttonu"
                android:text="Reddet"
                android:layout_marginStart="40dp"
                android:textAllCaps="false"
                android:background="#ff3030"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:visibility="invisible"/>

        </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>